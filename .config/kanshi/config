	exec swaymsg workspace 1, move workspace to output '"Samsung Display Corp. 0x4193 Unknown"', output "'eDP-1'" bg ~/images/wallpapers/cityscape_synthwave_moon_buildings_4k_hd_vaporwave.jpg fill
	exec swaymsg workspace 2, move workspace to output '"Dell Inc. DELL S2722QC GRLCMD3"', output "'Dell Inc. DELL S2722QC GRLCMD3'" bg ~/images/wallpapers/michelangelo_vaporwave_portrait.jpg fill
	exec swaymsg workspace 3, move workspace to output '"Dell Inc. DELL S2722QC DLXCMD3"', output "'Dell Inc. DELL S2722QC DLXCMD3'" bg ~/images/wallpapers/michelangelo_vaporwave_4k.jpg fill

	exec printf 'Samsung Display Corp. 0x4193 Unknown\nDell Inc. DELL S2722QC GRLCMD3\nDell Inc. DELL S2722QC DLXCMD3' > ~/.config/sway_win_extra
}

