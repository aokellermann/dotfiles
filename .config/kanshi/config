	exec sway-wins.sh
}

profile Desktop {
	output "Samsung Display Corp. 0x4193 Unknown" position 1440,1660
	output "Dell Inc. DELL S2722QC GRLCMD3" position 0000,0000 scale 1.5 transform 90
