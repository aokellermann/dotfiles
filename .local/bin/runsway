#!/bin/sh -e

export XDG_SESSION_TYPE=wayland
export XDG_CURRENT_DESKTOP=sway

export XDG_CONFIG_HOME="$HOME/.config"
export XDG_CACHE_HOME="$HOME/.cache"

set -o allexport
. "$XDG_CONFIG_HOME/user-dirs.dirs"
set +o allexport

# paging
export PAGER="bat -p"
export MANPAGER="sh -c 'sed -u -e \"s/\\x1B\[[0-9;]*m//g; s/.\\x08//g\" | bat -p -lman'"

# https://wiki.archlinux.org/title/wayland#Java
export _JAVA_AWT_WM_NONREPARENTING=1

# https://wiki.archlinux.org/title/Firefox#Wayland
export MOZ_ENABLE_WAYLAND=1

# https://wiki.archlinux.org/title/wayland#Qt
export QT_QPA_PLATFORM=wayland

# https://wiki.archlinux.org/title/Wayland#Environment_variable
export ELECTRON_OZONE_PLATFORM_HINT=wayland

# https://wiki.archlinux.org/title/Uniform_look_for_Qt_and_GTK_applications#Kvantum
export QT_STYLE_OVERRIDE=kvantum

# https://bitwarden.com/help/ssh-agent/
export SSH_AUTH_SOCK=$HOME/.bitwarden-ssh-agent.sock

# https://wiki.archlinux.org/title/Go#Install_directory
export GOPATH=~/.go

# https://docs.sfcompute.com/docs/getting-started#cli-options
export SF_CLI_DISABLE_AUTO_UPGRADE=1

# ranger
export RANGER_LOAD_DEFAULT_RC=false

exec sway
