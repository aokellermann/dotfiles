#!/bin/bash
# Display current power profile for waybar

profile=$(powerprofilesctl get)

case "$profile" in
	performance)
		echo "{\"text\": \"Û∞àê\", \"tooltip\": \"Performance\"}"
		;;
	balanced)
		echo "{\"text\": \"‚öñ\", \"tooltip\": \"Balanced\"}"
		;;
	power-saver)
		echo "{\"text\": \"üîã\", \"tooltip\": \"Power Saver\"}"
		;;
	*)
		echo "{\"text\": \"$profile\", \"tooltip\": \"$profile\"}"
		;;
esac
