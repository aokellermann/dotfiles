[colors]
trans = rgba(255, 255, 255, 0)
black = #c680d1
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/example]
background = ${colors.trans}
foreground = ${colors.black}

width = 100%
height = 25
radius = 6.0
fixed-center = true

line-size = 3
line-color = #c680d1

border-size = 4
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = fixed:pixelsize=10;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = siji:pixelsize=10;1

modules-left = i3 mpd
modules-center = date
modules-right = cpu temperature wlan battery

tray=right	
tray-position = right
tray-padding = 2

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-trans = #FFFFFF
label-focused-underline= #FFFFFF
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 2

label-urgent = %index%!
label-urgent-trans = ${colors.alert}
label-urgent-padding = 2

label-empty = %index%
label-empty-black = ${colors.trans}
label-empty-padding = 2

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = 2
label-mode-black = #000
label-mode-trans = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-trans = ${module/bspwm.label-focused-trans}
label-focused-underline = ${module/bspwm.label-focused-underline}
label-focused-padding = ${module/bspwm.label-focused-padding}

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = ${module/bspwm.label-occupied-padding}

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-trans = ${self.label-focused-trans}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-trans = ${module/bspwm.label-urgent-trans}
label-urgent-padding = ${module/bspwm.label-urgent-padding}

[module/mpd]
type = internal/mpd
format-online = <label-song>  <icon-prev> <icon-stop> <toggle> <icon-next>

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 

label-song-maxlen = 200
label-song-ellipsis = true

host = 127.0.0.1
port = 6601
interval = 2

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-black = ${colors.trans}
#uformat-underline = #f90000
label = %percentage%%

[module/wlan]
type = internal/network
interface = wlp4s0
interval = 3.0

format-connected = <ramp-signal> <label-connected>
#format-connected-underline = #9f78e1
label-connected = %essid%

format-disconnected =
;format-disconnected = <label-disconnected>
#;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-black = ${colors.trans}

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-black = ${colors.trans}

[module/date]
type = internal/date
interval = 5

date = %B %d
date-alt = %B %d

time = %H:%M
time-alt = %H:%M

format-prefix = 
format-prefix-black = ${colors.trans}
#format-underline = #0a6cf5

label = %date% %time%


[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 98

format-charging = <animation-charging> <label-charging>
#format-charging-underline = #ffb52a

format-discharging = <ramp-capacity> <label-discharging>
#format-discharging-underline = ${self.format-charging-underline}

format-full-prefix = " "
format-full-prefix-black = ${colors.trans}
#format-full-underline = ${self.format-charging-underline}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-black = ${colors.trans}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-black = ${colors.trans}
animation-charging-framerate = 750

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
#format-underline = #f50a4d
format-warn = <ramp> <label-warn>
#format-warn-underline = ${self.format-underline}

label = %temperature%
label-warn = %temperature%
label-warn-black = ${colors.secondary}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-black = ${colors.trans}

